---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- google font Inter -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

        <title>{title}</title>
    </head>
    <body>
        <!-- <Navbar /> -->
        <slot />
    </body>
</html>

<style is:global>
    * {
        scrollbar-width: thin;
    }

    *::-webkit-scrollbar {
        @apply w-2;
    }

    *::-webkit-scrollbar-thumb {
        @apply bg-slate-300 rounded-full;
    }

    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
    }

    .bb {
        @apply border border-black;
    }

    body {
        font-family: "Inter", sans-serif;
        letter-spacing: 0.4px;
        @apply text-black;
    }

    .container {
        max-width: 1140px;
        margin: auto;
        padding-inline: 20px;
    }

    .balance {
        text-wrap: balance;
    }

    ul li a {
        @apply text-black;
    }

    ul li a:hover {
        @apply text-blue;
    }

    .container1 {
        background: url(../assets/images/hero@75.jpg);
        background-position: center;
        background-size: cover;
    }
    .square {
        background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32"><rect width="100%" height="100%" fill="none" stroke="rgba(15, 23, 42, 0.2)" stroke-width="0.1" /></svg>');
    }
</style>
