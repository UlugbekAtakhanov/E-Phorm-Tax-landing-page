<style>
    .card {
        background: url(../assets/images/6.jpg) center no-repeat;
        background-position: bottom;
        background-size: contain;
    }
    .paper {
        background: linear-gradient(
            to bottom,
            hsla(0, 0%, 100%, 0.08) 0%,
            hsla(0, 0%, 100%, 0.079) 8.1%,
            hsla(0, 0%, 100%, 0.078) 15.5%,
            hsla(0, 0%, 100%, 0.075) 22.5%,
            hsla(0, 0%, 100%, 0.071) 29%,
            hsla(0, 0%, 100%, 0.067) 35.3%,
            hsla(0, 0%, 100%, 0.062) 41.2%,
            hsla(0, 0%, 100%, 0.057) 47.1%,
            hsla(0, 0%, 100%, 0.053) 52.9%,
            hsla(0, 0%, 100%, 0.048) 58.8%,
            hsla(0, 0%, 100%, 0.043) 64.7%,
            hsla(0, 0%, 100%, 0.039) 71%,
            hsla(0, 0%, 100%, 0.035) 77.5%,
            hsla(0, 0%, 100%, 0.032) 84.5%,
            hsla(0, 0%, 100%, 0.031) 91.9%,
            hsla(0, 0%, 100%, 0.03) 100%
        );
    }

    .rotate {
        animation: rotate;
        animation-iteration-count: infinite;
        animation-duration: 4s;
    }

    @keyframes rotate {
        to {
            transform: rotate(360deg);
        }
    }
</style>
